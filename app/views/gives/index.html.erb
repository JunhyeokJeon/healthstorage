<div class="container">
  <h1>Gives</h1>

<h1>Gives</h1>

<table>
  <thead>
    <tr>
      <th>No</th>
      <th>title</th>
      <th>name</th>
    </tr>
  </thead>

  <tbody>
    <% @gives.each do |gife| %>
      <tr>
        <td><%= gife.id %></td>
        <td><%= link_to gife.title, gife %></td>
        <td><%= gife.name %></td>
      </tr>
    </thead>

    <tbody>
      <% @gives.each do |gife| %>
        <tr>
          <td><%= gife.title %></td>
          <td><%= gife.content %></td>
          <td><%= link_to 'Show', gife %></td>
          <td><%= link_to 'Edit', edit_gife_path(gife) %></td>
          <td><%= link_to 'Destroy', gife, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Gife', new_gife_path %>
</div>
