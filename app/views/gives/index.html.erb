<div class="container index-top-container">
  <h1>빌려드려요</h1>

  <%= form_tag(gives_path, :method => "get", id: "search-form", class: "form-inline") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Posts", class: "form-control" %>
    <%= submit_tag "검색", class: "btn btn-outline-success my-2 my-sm-0 search-btn" %>
  <%end%>

  <div class="album py-5 index-album-box">
    <div class="container index-card-container">
      <div class="row">
        <% @gives.each do |gife| %>
          <div class="col-md-4">
            <div class="card mb-4 box-shadow card-box">
              <%= image_tag("#{gife.image.main}") %>
              <div class="card-body">
                <h3><%= link_to gife.title, gife %></h3>
                <span>by <b><%= gife.name %></b></span>
                <%if gife.endd == true%><br>
                대여완료
                <%end%>
                <div class="d-flex justify-content-between align-items-center">
                  <small class="text-muted"><%= gife.created_at.strftime("%Y-%m-%d") %></small>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <br>
  <%= link_to 'New', new_gife_path, class: "btn btn-primary btn-index" %>
</div>
