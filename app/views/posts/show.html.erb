<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @post.content %>
  </p>
  <% @post.post_comments.each do |c|%>
    댓글 : <%= c.content %>
    <a href ='/post_comments/delete/<%= c.id %>'>댓글삭제</a>
  <%end%>
  <br>
  <br>
  <form action = '/post_comments/create/<%= @post.id %>'>
    <input type = 'textarea' name = 'comment' placeholder = '댓글을 입력해주세요..'>
    <input type = 'submit' value = '작성'>
  </form>

  <p>
    <%= link_to @post.name, profile_path(user_id: @post.user_id ) %>
  </p>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>
