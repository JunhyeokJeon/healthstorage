<div class="container">
  <h1>Gives</h1>

<%= form_tag(gives_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
<%= submit_tag "검색" %>
<%end%>

<table>
  <thead>
    <tr>
      <th>No</th>
      <th>title</th>
      <th>name</th>
      <th>image</th>
    </tr>
  </thead>

  <tbody>
    <% @gives.each do |gife| %>
      <tr>
        <td><%= gife.id %></td>
        <td><%= link_to gife.title, gife %></td>
        <td><%= gife.name %></td>
        <td><%= image_tag("#{gife.image.main}") %></td>
      </tr>
     <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Gife', new_gife_path %>
</div>
