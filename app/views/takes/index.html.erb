<p id="notice"><%= notice %></p>

<h1>Takes</h1>

<%= form_tag(takes_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
<%= submit_tag "검색" %>
<%end%>

<table>
  <thead>
    <tr>
      <th>No</th>
      <th>title</th>
      <th>name</th>
      <th>image</th>
    </tr>
  </thead>

  <tbody>
    <% @takes.each do |take| %>
      <tr>
        <td><%= take.id %></td>
        <td><%= link_to take.title, take %></td>
        <td><%= take.name %></td>
        <td><%= image_tag("#{take.image.main}") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Take', new_take_path %>
